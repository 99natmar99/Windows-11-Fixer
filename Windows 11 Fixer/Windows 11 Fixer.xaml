                            </TextBlock>
                            
                            <TextBlock Text="Optional Privacy Settings"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Margin="15,12,0,0"
                                       Foreground="{DynamicResource TextColor1}"
                                       FontFamily="Fonts/#Sans"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="No Change"
                                             Name="Osettings_NC"
                                             GroupName="Osettings"
                                             IsChecked="True"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             Margin="15,5,0,0"
