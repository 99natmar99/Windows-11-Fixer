                                             FontFamily="Fonts/#Sans"
                                             FontSize="14"/>
                                <RadioButton Content="Light"
                                             Name="STheme_Light"
                                             GroupName="STheme"
                                             Margin="25,5,0,0"
                                             Foreground="{DynamicResource TextColor1}"
                                             FontFamily="Fonts/#Sans"
                                             FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="Application Theme"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Margin="15,12,0,0"
                                       Foreground="{DynamicResource TextColor1}"
                                       FontFamily="Fonts/#Sans"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="No Change"
