                                               Foreground="{DynamicResource TextColor1}"
                                               FontFamily="Fonts/#Sans"
                                               FontWeight="Bold"
                                               FontSize="20"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Mozilla Firefox"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Margin="15,7,0,0"
                                       Foreground="{DynamicResource TextColor1}"
                                       FontFamily="Fonts/#Sans"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Don't Install"
                                             Name="Firefox_NC"
                                             GroupName="Firefox"
                                             IsChecked="True"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             Margin="15,5,0,0"
                                             Foreground="{DynamicResource TextColor1}"
                                             FontFamily="Fonts/#Sans"
                                             FontSize="14"/>
                                    <RadioButton Content="Install"
                                             Name="Firefox_Install"
                                             GroupName="Firefox"
                                             Margin="25,5,0,0"
                                             Foreground="{DynamicResource TextColor1}"
                                             FontFamily="Fonts/#Sans"
                                             FontSize="14"/>
                                </StackPanel>

                                <TextBlock Text="Google Chrome"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Margin="15,12,0,0"
                                       Foreground="{DynamicResource TextColor1}"
                                       FontFamily="Fonts/#Sans"
                                       FontWeight="Medium"
                                       FontSize="16"/>
